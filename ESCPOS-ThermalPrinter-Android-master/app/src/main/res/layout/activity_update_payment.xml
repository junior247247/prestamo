<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:orientation="vertical"
    tools:context=".UpdatePaymentActivity">


    <Button
        android:id="@+id/buttonSumar"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:text="sumar"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/purpura"
        android:background="@drawable/backinput"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textiViewName"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textiViewPagado"
        android:text="PAGADO:0"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textiViewPendiente"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="PENDIENTE:0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textiViewPrestamo"
        android:text="PRESTAMO:0"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginVertical="20dp"
        android:background="#000000"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="Monto"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingLeft="10dp"

        android:id="@+id/editextMonto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backinput" />

    <Button
        android:textColor="@color/white"
        android:backgroundTint="@color/purpura"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:id="@+id/buttonSave"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="guardar"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@drawable/backinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>