<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc"
    android:fitsSystemWindows="true"
    tools:context=".CreateClientActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Registro Cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginVertical="20dp"
        android:background="#000000"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
       android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="NOMBRE"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText

        android:paddingLeft="10dp"
        android:id="@+id/editextName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
       android:layout_marginHorizontal="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backinput" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="Apellido"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/editextLastname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backinput" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="Direccion"
        android:textStyle="bold"
        android:textColor="#000000"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/editextAdress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backinput" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:text="Telefono"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/editextPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:maxLength="10"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/backinput" />


    <Button
        android:id="@+id/buttonSave"
        android:textColor="@color/white"
        android:backgroundTint="@color/purpura"
        android:text="Guardar"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="20dp"
        android:background="@drawable/backinput"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>